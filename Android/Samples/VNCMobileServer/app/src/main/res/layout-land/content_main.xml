<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.VNCMobileServer"
    tools:showIn="@layout/app_bar_main"
    >

    <!-- Icon -->
    <ImageView
        android:id="@+id/content_main_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:src="@mipmap/main_icon_land"
        android:scaleType="fitCenter"

        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/content_main_tlink"
        />

    <!-- T-Link -->
    <ImageView
        android:id="@+id/content_main_tlink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:src="@mipmap/tlink_logo_land"
        android:scaleType="fitCenter"

        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_main_icon"
        app:layout_constraintBottom_toTopOf="@id/content_main_description"
        />

    <!-- Message -->
    <TextView
        android:id="@+id/content_main_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/TID_5293"
        android:textSize="14sp"
        android:textAlignment="center"

        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_main_tlink"
        app:layout_constraintBottom_toTopOf="@id/content_main_avx"
        />

    <!-- AVX -->
    <ImageView
        android:id="@+id/content_main_avx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:src="@mipmap/main_avx_land"
        android:scaleType="fitCenter"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <!-- For Debug -->
    <LinearLayout
        android:id="@+id/content_main_debug_layout"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:orientation="vertical"

        android:background="#A0000000"

        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/content_main_debug_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"

            android:textColor="@android:color/white"
            android:textSize="24sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/content_main_debug_button_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                />
            <Button
                android:id="@+id/content_main_debug_button_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                />
            <Button
                android:id="@+id/content_main_debug_button_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/content_main_debug_button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                />
            <Button
                android:id="@+id/content_main_debug_button_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                />
            <Button
                android:id="@+id/content_main_debug_button_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/content_main_debug_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                />
            <Button
                android:id="@+id/content_main_debug_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                />
            <Button
                android:id="@+id/content_main_debug_button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/content_main_debug_button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0"
                />
            <Button
                android:id="@+id/content_main_debug_button_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DEL"
                />
        </LinearLayout>

        <Button
            android:id="@+id/content_main_debug_button_disp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Show"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
