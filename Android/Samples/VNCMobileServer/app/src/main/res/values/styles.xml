<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- Tutorial. -->
    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/SettingsTheme.ActionBar</item>
    </style>

    <!-- ActionBar -->
    <style name="SettingsTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/SettingsTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/SettingsTheme.ActionBar.TitleTextStyle</item>

        <item name="contentInsetEnd">0dp</item>
    </style>
    <style name="SettingsTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- -->
    <style name="AppTheme.Translucent">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
    </style>

    <style name="MyDrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NavigationViewTextAppearance">
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Tutorial -->
    <style name="TutorialTitleStyle" parent="TextAppearance.AppCompat.Large">
    </style>

    <style name="TutorialDescriptionStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

        <item name="android:textSize">16sp</item>
        <item name="android:minLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TutorialButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>

        <item name="android:backgroundTint">#80FFFFFF</item>

        <!--
        <item name="android:background">#FFE0E0</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        -->
    </style>
</resources>
