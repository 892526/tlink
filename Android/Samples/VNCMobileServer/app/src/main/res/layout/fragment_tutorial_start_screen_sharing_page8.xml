<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/fragment_tutorial_launch_page7_text"
        style="@style/TutorialDescriptionStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TID_5402"

        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"

        android:src="@mipmap/tutorial_launch_7"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_launch_page7_text"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>
